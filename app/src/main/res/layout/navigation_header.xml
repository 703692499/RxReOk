<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorPrimaryDark"
              android:orientation="vertical"
              android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll_nv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_nv_icon"
            android:layout_width="@dimen/width_height_image"
            android:layout_height="@dimen/width_height_image"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/iv_icon"
            />

        <TextView
            android:id="@+id/tv_nv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="ThatNight"
            android:textColor="@color/color_text"
            android:textSize="14sp"
            />
    </LinearLayout>

</LinearLayout>